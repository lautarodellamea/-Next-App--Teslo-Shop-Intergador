generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Size {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}

enum Gender {
  men
  women
  kid
  unisex
}

model Category {
  id   String @id @default(uuid())
  name String @unique

  // esto se genera a traves de la relacion en Product
  Product Product[]
}

model Product {
  id          String   @id @default(uuid())
  title       String
  description String
  inStock     Int
  price       Float    @default(0)
  sizes       Size[]   @default([])
  slug        String   @unique
  tags        String[] @default([])
  gender      Gender

  // relacion con category
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String // este campo es el que enlazo a category

  // esto se genera a traves de la relacion en ProductImages
  ProductImage ProductImage[]

  @@index([gender]) // para buscar productos por genero
}

// las imagenes van en otra tabla ya que al hacer el loop de un product tenga que leerlas y no siempre las uso, creo una tabla indepenidente
model ProductImage {
  id  Int    @id @default(autoincrement())
  url String

  // relacion a Product hacia el id de este
  product   Product @relation(fields: [productId], references: [id])
  productId String
}
